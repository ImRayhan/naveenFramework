<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Opencart App Test Regression Suite" thread-count="4"
	parallel="tests" verbose="4">

	<listeners>
		<listener class-name="com.qa.opencart.listeners.ExtentReportListener" />
		<listener class-name="com.qa.opencart.listeners.TestAllureListener" />
		<!-- 	<listener
		class-name="com.qa.opencart.listeners.AnnotationTransformer" />  -->
	</listeners>

	<test name="Login Page Test">
		<parameter name="browser" value="chrome" />
		<parameter name="browserversion" value="113.0" />
		<parameter name="testname" value="Login Page Test" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

	   <test name="Accounts Page Test">
		<parameter name="browser" value="chrome" />
		<parameter name="browserversion" value="113.0" />
		<parameter name="testname" value="Accounts Page Test" />
		<classes>
			<class name="com.qa.opencart.tests.AccountPageTest" />
		</classes>
	</test>


	<test name="Product Results Page Test">
		<parameter name="browser" value="chrome" />
		<parameter name="browserversion" value="113.0" />
		<parameter name="testname" value="Product Results Page Test" />
		<classes>
			<class name="com.qa.opencart.tests.ProductResultPageTest" />
		</classes>
	</test>
	<test name="Register Page Test">
		<parameter name="browser" value="chrome" />
		<parameter name="browserversion" value="113.0" />
		<parameter name="testname" value="Register Page Test" />
		<classes>
			<class name="com.qa.opencart.tests.RegisterPageTest" />
		</classes>
	</test> 


</suite>
